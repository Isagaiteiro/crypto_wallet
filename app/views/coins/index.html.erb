<h1><%= nome_aplicacao %></h1>

<p id="notice"><%= notice %></p>

<h2>Moedas</h2>
<h2><%= cookies[:curso] %></h2>
<h2><%= session[:curso] %></h2>
<%= l(Date.today) %>
<table>
  <thead>
    <tr>
      <th><%= @coins.human_attribute_name(:description)%></th>
      <th><%= @coins.human_attribute_name(:acronym)%></th>
      <th><%= @coins.human_attribute_name(:url_image)%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
        <!--<td> <img src= "<%= coin.url_image %>" whidth=25px height=25px/> </td>-->
        <!--<td> <%= image_tag coin.url_image, whidth: 25, height: 25 %></td> -->
        <td> <%= image_tag coin.url_image, size: "25x25" %></td> 
        <td><%= link_to t('links.show'), coin %></td> <%# O próprio Ruby identifica a rota e completa com  coin_path para não repetir várias vezes%>
        <td><%= link_to t('links.edit'), edit_coin_path(coin) %></td>
        <td><%= link_to t('links.delete'), coin, method: :delete, data: { confirm: 'Tem certeza?' } %></td> <%# O próprio Ruby identifica a rota e completa com  coin_path para não repetir várias vezes%>
      </tr>
    <% end %>
  </tbody>
</table>

