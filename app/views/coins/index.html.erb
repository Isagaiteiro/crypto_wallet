<p id="notice"><%= notice %></p>

<h2><%= Coin.model_name.human(count: @coins.count) %></h2>

<table class="table table-hover">
  <thead>
    <tr>
      <th><%= @coins.human_attribute_name(:description)%></th>
      <th><%= @coins.human_attribute_name(:acronym)%></th>
      <th><%= @coins.human_attribute_name(:url_image)%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
        <!--<td> <img src= "<%= coin.url_image %>" whidth=25px height=25px/> </td>-->
        <!--<td> <%= image_tag coin.url_image, whidth: 25, height: 25 %></td> -->
        <td> <%= image_tag coin.url_image, size: "25x25" %></td> 
        <td><%= link_to t('links.show'), coin, class:"btn btn-secondary btn-sm", role:"button" %></td> <%# O próprio Ruby identifica a rota e completa com  coin_path para não repetir várias vezes%>
        <td><%= link_to t('links.edit'), edit_coin_path(coin), class:"btn btn-secondary btn-sm", role:"button" %></td>
        <td><%= link_to t('links.delete'), coin, method: :delete, data: { confirm: t('message.confirm') }, class:"btn btn-danger btn-sm", role:"button" %></td> <%# O próprio Ruby identifica a rota e completa com  coin_path para não repetir várias vezes%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('links.back'), welcome_index_path, class:"btn btn-dark btn-sm", role:"button" %>
<%= link_to t('new.coin'), new_coin_path, class:"btn btn-dark btn-sm", role:"button" %>
