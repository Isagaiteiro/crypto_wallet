<h1><%= nome_aplicacao %></h1>

<p id="notice"><%= notice %></p>

<h2>Moedas</h2>
<%= data_br(Date.today) %>
<table>
  <thead>
    <tr>
      <th>Descrição</th>
      <th>Sigla</th>
      <th>Imagem</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
        <!--<td> <img src= "<%= coin.url_image %>" whidth=25px height=25px/> </td>-->
        <!--<td> <%= image_tag coin.url_image, whidth: 25, height: 25 %></td> -->
        <td> <%= image_tag coin.url_image, size: "25x25" %></td> 
        <td><%= link_to 'Mostrar', coin %></td> <%# O próprio Ruby identifica a rota e completa com  coin_path para não repetir várias vezes%>
        <td><%= link_to 'Editar', edit_coin_path(coin) %></td>
        <td><%= link_to 'Apagar', coin, method: :delete, data: { confirm: 'Tem certeza?' } %></td> <%# O próprio Ruby identifica a rota e completa com  coin_path para não repetir várias vezes%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Moeda', new_coin_path %>
